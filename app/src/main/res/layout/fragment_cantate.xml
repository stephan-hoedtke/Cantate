<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cantate"
            type="com.stho.cantate.Cantate" />
        <variable
            name="sunday"
            type="com.stho.cantate.EvangelicSunday" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewCantate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:text="@{cantate.getTitle(), default=`Ich hatte viel BekÃ¼mmernis`}"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textViewBWV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:text="@{`BWV ` + cantate.getBWV(), default=`BWV 51`}"
            app:layout_constraintTop_toBottomOf="@id/textViewCantate"
            />


        <TextView
            android:id="@+id/textViewSunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:text="@{sunday.getName(), default=`3. Sonntag nach Trinitatis`}"
            app:layout_constraintTop_toBottomOf="@id/textViewBWV"
            />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:text="@{cantate.getOriginalDate(), default=`1685-04-21`}"
            app:layout_constraintTop_toBottomOf="@id/textViewSunday"
            />

        <TextView
            android:id="@+id/textViewInstrumentation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:text="@{cantate.getInstrumentation(), default=`S A T B Continue`}"
            app:layout_constraintTop_toBottomOf="@id/textViewDate"
            />

        <!-- LIST of Track ... -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewInstrumentation"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
